mscs-enabled=true
mscs-client-version={{ minecraft_version }}
mscs-server-version={{ minecraft_version }}
mscs-restart-after-crash=true

{% if minecraft_server_tool == "papermc" %}
mscs-server-url=https://papermc.io/api/v2/projects/paper/versions/{{ minecraft_version }}/builds/{{ minecraft_papermc_build }}/downloads/paper-{{ minecraft_version }}-{{ minecraft_papermc_build }}.jar
mscs-server-jar=paper-{{ minecraft_version }}.jar
{% elif minecraft_server_tool == "spigot" %}
mscs-server-jar=spigot-{{ minecraft_version }}.jar
{% endif %}
